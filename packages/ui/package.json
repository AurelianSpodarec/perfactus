{
  "name": "@perfactus/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./src/*.tsx"
  },
  "license": "MIT",
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "check-types": "tsc --noEmit",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@perfactus/eslint-config": "workspace:*",
    "@perfactus/tailwind-config": "workspace:*",
    "@perfactus/typescript-config": "workspace:*",
    "@types/react": "^19.0.10",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.23.0",
    "postcss": "^8.5.3",
    "@tailwindcss/cli": "^4.0.12",
    "@tailwindcss/postcss": "^4.0.12",
    "tailwindcss": "^4.0.12",
    "typescript": "5.8.2"
  }
}
